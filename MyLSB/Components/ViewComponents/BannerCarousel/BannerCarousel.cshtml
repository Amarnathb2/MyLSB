@model IEnumerable<BannerViewModel>

<header class="banner-carousel">
    <div class="banner-carousel__parent">
        <div class="banner-carousel__slides">
            @foreach (var banner in Model)
            {
                <div class="banner-carousel__slide">
                    <div class="container d-lg-flex flex-lg-row-reverse justify-content-lg-start align-items-lg-center">
                        <img src="~/images/triangle-tr-bg.svg" alt="" aria-hidden="true" class="banner-carousel__decoration" />
                        <img src="@Url.Content(banner.Image)" alt="" aria-hidden="true" class="banner-carousel__img" />
                        <div class="banner-carousel__content">
                            <div class="banner-carousel__content-inner">
                                <div id="bannerHeading" class="banner-carousel__heading">@Html.Raw(banner.Heading)</div>
                                <div class="banner-carousel__sub">@Html.Raw(banner.Text)</div>
                                @if (banner.Button is not null)
                                {
                                    <a href="@Url.Content(banner.Button.Url)" class="btn btn-primary banner-carousel__btn" @Html.Raw(banner.Button.NewTab ? "target=\"_blank\"" : "") @Html.Raw(!String.IsNullOrEmpty(banner.Button.AriaLabel) ? $"aria-label=\"{banner.Button.AriaLabel}\"" : "")>
                                        @Html.Raw(banner.Button.Text)@Html.Raw(banner.Button.NewTab ? "<span class=\"sr-only\"> (opens in a new tab)</span>" : "")
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (Model.Count() > 1)
        {
            <div class="container banner-carousel-controls">
                <ul class="list-inline">
                    <li>
                        <button type="button" class="prev" title="Previous slide" data-action="slickPrev"><i class="fa fa-angle-left" aria-hidden="true"></i><span class="sr-only">Previous slide</span></button>
                    </li>
                    <li style="display: none">
                        <button type="button" class="play" title="Play" data-action="slickPlay"><i class="fa fa-play" aria-hidden="true"></i><span class="sr-only">Play</span></button>
                    </li>
                    <li>
                        <button type="button" class="pause" title="Pause" data-action="slickPause"><i class="fa fa-pause" aria-hidden="true"></i><span class="sr-only">Pause</span></button>
                    </li>
                    <li>
                        <button type="button" class="next" title="Next slide" data-action="slickNext"><i class="fa fa-angle-right" aria-hidden="true"></i><span class="sr-only">Next slide</span></button>
                    </li>
                </ul>
            </div>
        }

    </div>
</header>